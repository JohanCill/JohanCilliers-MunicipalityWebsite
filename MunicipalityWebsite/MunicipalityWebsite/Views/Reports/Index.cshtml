@model List<MunicipalityWebsite.Models.Reports>

<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
<style>
	body {
		align-items: center;
		margin: 10px;
		display: flex;
	}
</style>
<nav>
	<ul>
		<li><a href="/">Home</a></li>
		<li><a href="/Citizen/Index">Citizens</a></li>
		<li><a href="/Staff/Index">Staff</a></li>
		<li><a href="/Reports/Index">Reports</a></li>
		<li><a href="/Service/Index">Service</a></li>
	</ul>
</nav>

<div class="AllCitizens">
	<h2>Reports List</h2>
	<div class="centerTable">
		<table>
			<tr>
				<th>ReportID</th>
				<th>CitizenID</th>
				<th>ReportType</th>
				<th>Details</th>
				<th>SubmissionDate</th>
				<th>Status</th>
			</tr>
			@foreach (var reports in Model)
			{
				<tr>
					<td>@reports.ReportID</td>
					<td>@reports.CitizenID</td>
					<td>@reports.ReportType</td>
					<td>@reports.Details</td>
					<td>@reports.SubmissionDate</td>
					<td>@reports.Status</td>
				</tr>
			}
		</table>
	</div>
</div>
<div class="inputFields">

	<form action="/Reports/CreateReport" method="post">
		<button type="button" class="collapsible"><b>Create new Report</b></button>
		<div class="content">
			<div class="Content-wrapper">

				<label for="CitizenID">CitizenID</label>
				<input type="number" id="CitizenID" name="CitizenID" required />

				<label for="ReportType">ReportType</label>
				<input type="text" id="ReportType" name="ReportType" required />

				<label for="Details">Details</label>
				<input type="text" id="Details" name="Details" required />

				<button type="submit">Submit</button>

			</div>
		</div>
	</form>


	<form action="/Reports/ReviewReport" method="post">
		<button type="button" class="collapsible"><b>Review Citizen Reports</b></button>
		<div class="content">
			<div class="Content-wrapper">
		
				<label for="ReportID">ReportID</label>
				<input type="number" id="ReportID" name="ReportID" required />
				<button type="submit">Update Report</button>
			</div>
		</div>

		
	</form>


	<form action="/Reports/DeleteReport" method="post">

		<button type="button" class="collapsible"><b>Delete Citizen Report</b></button>
		<div class="content">
			<div class="Content-wrapper">

				<label for="CitizenID">Citizen ID</label>
				<input type="number" id="CitizenID" name="CitizenID" required />

				<button type="submit" onclick="return confirm('Are you sure you want to delete this report?')">
					Delete Report
				</button>

			</div>
		</div>
	</form>


	<form action="/Reports/GetDetailsReport" method="get">
		<button type="button" class="collapsible"><b>Citizen Details</b></button>
		<div class="content">
			<div class="Content-wrapper">
				<label for="CitizenID">Citizen ID</label>
				<input type="number" id="CitizenID" name="CitizenID" required />
				<button type="submit">Get Details</button>
			</div>
		</div>
	</form>

</div>

<script>
	var coll = document.getElementsByClassName("collapsible");
	var i;

	for (i = 0; i < coll.length; i++) {
		debugger
		coll[i].addEventListener("click", function () {
			this.classList.toggle("active");
			var content = this.nextElementSibling;
			if (content.style.display === "block") {
				content.style.display = "none";
			} else {
				content.style.display = "block";
			}
		});
	}
</script>