@model MunicipalityWebsite.Models.Citizen

<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/Citizen/Index">Citizens</a></li>
        <li><a href="/Staff/Index">Staff</a></li>
        <li><a href="/Reports/Index">Reports</a></li>
        <li><a href="/Service/Index">Service</a></li>
    </ul>
</nav>

<div class="detailPage">
<h3>Citizen Details</h3>
    @if (Model != null)
    {
        <div>
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth!.Value.ToString("yyyy-MM-dd")</p>
        </div>
    }
    else
    {
        <p>No citizen details available.</p>
    }
</div>